#!/bin/bash

DOTFILES_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")"/.. && pwd)"

symlink() {
  src=$DOTFILES_DIR/$1
  dst=$HOME/.$1

  if [[ -e "$dst" ]]; then
    rm -rf "$dst"
  fi

  echo "SYMLINK: $src â†’ $dst"
  ln -sf "$src" "$dst"
}

symlink vim
symlink vimrc
symlink gitconfig
symlink zshrc
symlink tmux.conf

vim +PluginInstall +qall
